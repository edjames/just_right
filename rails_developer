#!/usr/bin/env bash

GIT_BRANCH="develop"

clear

echo ; echo "You are about to set up your Ruby on Rails development environment just right." ; echo

bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/shared_assets/distro_warning)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/shared_assets/enter_to_begin)"

clear

echo "Retrieving new lists of packages ..."
  sudo apt-get update -qq

bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/rails_developer_assets/libraries)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/rails_developer_assets/rvm)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/rails_developer_assets/ruby_gems)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/rails_developer_assets/ssh)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/rails_developer_assets/mysql)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/rails_developer_assets/ack)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/rails_developer_assets/imagemagick)"

echo -n "Do you want to install MongoDB? (y/n) "
read USER_CONFIRM
[ "$USER_CONFIRM" = "y" ] && bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/rails_developer_assets/mongodb)"

echo
echo " +--------------------------------------------------------------------------------+ "
echo " | Congratulations! Your Ruby on Rails development environment is now just right! | "
echo " +--------------------------------------------------------------------------------+ "
echo

# Exit cleanly.
exit 0