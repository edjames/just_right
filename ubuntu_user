#!/usr/bin/env bash

GIT_BRANCH="develop"

clear

echo ; echo "You are about to set up your Ubuntu machine just right." ; echo

bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/shared_assets/distro_warning)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/shared_assets/enter_to_begin)"

clear

echo "Retrieving new lists of packages ..."
  sudo apt-get update -qq

bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/medibuntu)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/restricted_extras)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/dconf-tools)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/compiz)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/synaptic)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/terminator)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/gnome-tweak)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/vlc)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/jupiter)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/caffeine)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/sushi)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/light-dm)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/sysmonitor)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/dropbox)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/skype)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/open-jdk)"
bash -c "$(curl -s https://raw.github.com/edjames/just_right/${GIT_BRANCH}/ubuntu_user_assets/unity_tweaks)"

echo
echo " +---------------------------------------------------------+ "
echo " | Congratulations! Your Ubuntu machine is now just right! | "
echo " +---------------------------------------------------------+ "
echo

# Exit cleanly.
exit 0