#!/usr/bin/env bash

echo "You are about to set your Ubuntu machine just right."
echo -n "Press [ENTER] to begin ..."
read USER_COMFIRM

clear

bash < <(curl -s https://raw.github.com/edjames/just_right/master/ssh)

bash < <(curl -s https://raw.github.com/edjames/just_right/master/apt-update)

echo "Installing OS packages. You will be prompted for your password ..."
  sudo apt-get install build-essential -y

echo " +----------------------------------------+ "
echo " | Your Ubuntu machine is now just right! |"
echo " +----------------------------------------+ "

# Exit cleanly.
exit 0